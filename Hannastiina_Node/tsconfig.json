{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "tsconfig.json",
    ],
    "exclude": [
        "src/types/*.ts",
        "node_modules",
        ".vscode"
    ]
}